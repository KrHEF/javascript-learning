{
    "compilerOptions": {
      "module": "CommonJS",
      "outDir": "dist/js",
      "removeComments": true,
      "sourceMap":true,
      "strict": true,
      "target": "ESNext",
      "experimentalDecorators": true,
      // "emitDecoratorMetadata": true,
      "noUnusedLocals": false,
      "useDefineForClassFields": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "noImplicitOverride": true,
    },
    "include": [
      "script/ts/**/*.ts",
    ],
    "exclude": [
      "script/ts/elevator.ts",
    ]
}
